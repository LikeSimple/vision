/**index.wxss**/
.login-btn {
  margin: 400rpx auto;
  width: 80%;
   background: #1296db; 
   color: #fff;
   height: 120rpx;
   line-height: 120rpx;
   border-radius: 8rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
}
.welcome{
  color: black;
}

page{
  background: rgba(0,0,0,0.08);
}
.userInfo-top {
  height: 490rpx;
  background: #fff;
  padding-top:20rpx;
}
.userinfo-box {
  width: 90%;
  margin: 20rpx auto;
  height: 300rpx;
  border-radius: 10rpx;
  border: 2rpx solid #f5f5f5;
  box-shadow: 0 0 4rpx 0 rgba(0,0,0,0.2);
  border-bottom: none;
}
.userinfo-box .userName {
  height: 100rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
  padding-left:20rpx;
}
.userinfo-row {
  background: #1296db;
  color: #fff;
  border-bottom-left-radius: 10rpx;
   border-bottom-right-radius: 10rpx;
}
.userinfo-row .section {
   height: 120rpx;
   margin: 40rpx 0;
   width: 100%;
}
.userinfo-row .section:nth-of-type(1) {
   border-right: 2rpx solid #fff;
}
.userinfo-row .section text {
  padding-left:30rpx;
  font-size: 30rpx;
}
.userinfo-row .section .number{
  width: 90%;
  text-align: right;
  font-weight: bold;
  font-size:22rpx;
  margin-top: 30rpx;
}
.userInfo-list {
  height: 120rpx;
  width: 100%;
  margin:50rpx auto;
}

.userInfo-list .section {
  width: 50%;
  height: 150rpx;
}
.userInfo-list .section:nth-of-type(1){
    padding-right: 20rpx;
}
.userInfo-list .section image{
  width: 100%;
  height: 100%;
}
.recommend {
  background: #fff;
  height: 100%;
  width: 100%;
  margin-top: 30rpx;
}
.recommend .recommend-title {
  height: 110rpx;
  line-height: 110rpx;
  font-size: 30rpx;
  padding-left:20rpx;
  color: #666;
}
.recommend .recommend-content {
  width: 100%;
  height: 300rpx;
  border-top: 2rpx solid #bbb;
  color: #666;
}