.form-page{
  padding: 40rpx 0;
  height: 100%;
  overflow: hidden;
}
.form-box {
  width: 90%;
  margin: 50rpx auto;
}
.section{
   height: 120rpx; 
   border-bottom: 2rpx solid #f5f5f5;
}
.section image {
  width: 40rpx;
  height: 40rpx;
  padding: 0 30rpx;
}
.section input {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
}
.btn-area{
  margin-top: 120rpx;
}
.btn-area button {
  border-radius: 120rpx;
  color: #fff;
  background: #d9d9d9;
  border: none;
  outline: none;
}
.btn-area .isActive {
  background:#317ef3;
}
.flex_center{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}