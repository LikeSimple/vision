.student-relevancy {
   height: 100%;
   overflow: hidden;
   margin: 40rpx auto;
}
.student-item {
  width: 100%;
  height: 160rpx;
}
.student-item .col-1 {
  width: 20%;
  text-align: right;
  margin-left: -80rpx;
  font-size: 30rpx;
  color: #666;
}
.student-item input {
  border: 2rpx solid #a3a3a3;
  height: 40rpx;
  margin-left: 60rpx;
  line-height: 38rpx;
  width: 340rpx;
  border-radius: 6rpx;
  padding:8rpx 10rpx 16rpx;
  min-height: 0;
  font-size: 30rpx;
}
.student-btn {
  margin: 100rpx auto;
  width: 90%;
}
.student-btn button {
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius:25rpx;
  color: #999;
  border: none;
  background: #eee;
}
.student-btn .confirm {
   color: #fff;
   background: #317ef3;
}